<Window x:Class="Animation.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window2" Height="300" Width="300">
    <!--内发光-->
    <Grid>
        <Border ClipToBounds="True">
            <Border BorderThickness="4" BorderBrush="Blue" Margin="-4">
                <!--调整BorderThickness Margin BlurRadius 可改变内发光大小-->
                <Border.Effect>
                    <DropShadowEffect Color="Blue" ShadowDepth="0" BlurRadius="20"/>
                </Border.Effect>
            </Border>
        </Border>
    </Grid>
</Window>
